<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ifcbrusque.app">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IFCBrusque">
        <activity
            android:name=".ui.lembrete.InserirLembreteActivity"
            android:label=""
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".ui.noticia.NoticiaActivity"
            android:excludeFromRecents="true"
            android:label=""
            android:screenOrientation="portrait"
            android:taskAffinity="">
            >
        </activity>
        <activity
            android:name=".ui.home.HomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.IFCBrusque.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.login.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.IFCBrusque.NoActionBar" />

        <service
            android:name=".service.SyncService"
            android:exported="false" />

        <receiver android:name=".service.SyncReceiver">
            <intent-filter>
                <action android:name="com.ifcbrusque.app.ACTION_SINCRONIZACAO_COMPLETA" />
                <action android:name="com.ifcbrusque.app.ACTION_SINCRONIZACAO_RAPIDA" />
                <action android:name="com.ifcbrusque.app.ACTION_FINALIZAR_SERVICO" />
            </intent-filter>
        </receiver>

        <receiver android:name=".data.notification.NotificationReceiver">
            <intent-filter>
                <action android:name="com.ifcbrusque.app.ACTION_NOTIFICAR_LEMBRETE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>