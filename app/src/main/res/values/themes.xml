<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema bÃ¡sico -->
    <style name="Theme.IFCBrusque" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="Q">false</item>

        <!-- Cores -->
        <item name="colorPrimary">@color/verde</item>
        <item name="colorOnPrimary">@color/branco</item>
        <item name="colorSecondary">@color/branco</item>
        <item name="colorOnSecondary">@color/preto</item>
        <item name="colorAccent">@color/verde</item>
        <item name="colorSurface">@color/branco</item>
        <item name="colorOnSurface">@color/preto</item>
        <item name="backgroundColor">@color/fundo</item>

        <!-- Temas -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="bottomSheetDialogTheme">@style/Theme.IFCBrusque.BottomSheetDialog</item>
        <item name="android:windowAnimationStyle">@style/Theme.IFCBrusque.WindowAnimation</item>
        <item name="preferenceTheme">@style/Theme.IFCBrusque.Preferences</item>
    </style>

    <!-- Splash screen -->
    <style name="Theme.IFCBrusque.SplashTheme" parent="Theme.IFCBrusque">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/ic_launcher_background</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>