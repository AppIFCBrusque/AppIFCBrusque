<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorOnPrimary"
    android:foreground="?attr/selectableItemBackground"
    android:paddingHorizontal="@dimen/padding_views">

    <TextView
        android:id="@+id/noticia_titulo"
        style="@style/TextAppearance.TituloItemLista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/padding_views"
        android:paddingTop="@dimen/padding_views"
        android:text="@string/noticia_titulo_padrao"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/noticia_imagem"
        app:layout_constraintTop_toTopOf="@+id/noticia_imagem" />

    <TextView
        android:id="@+id/noticia_data"
        style="@style/TextAppearance.Secundario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/padding_views"
        android:paddingBottom="@dimen/padding_views"
        android:text="00/00/00"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/noticia_imagem"
        app:layout_constraintTop_toBottomOf="@+id/noticia_titulo" />

    <ImageView
        android:id="@+id/noticia_imagem"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:srcCompat="@drawable/ic_launcher_background" />

</androidx.constraintlayout.widget.ConstraintLayout>